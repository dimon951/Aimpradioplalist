<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fon_abaut"
    android:background="@null">

    <dmitriy.deomin.aimpradioplalist.custom.Text
        android:id="@+id/textView_abaut"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@null"
        android:enabled="true"
        android:focusable="auto"
        android:gravity="center"
        android:textIsSelectable="true"
        android:textSize="13sp" />

    <dmitriy.deomin.aimpradioplalist.custom.Btn
        android:id="@+id/button_politika"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="0dp"
        android:background="@null"
        android:text="Privacy Policy" />

    <dmitriy.deomin.aimpradioplalist.custom.Btn
        android:id="@+id/telegram"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/telega"
        android:onClick="opentelega"
        android:scaleType="fitCenter"
        android:src="@drawable/telega" />

    <dmitriy.deomin.aimpradioplalist.custom.Btn
        android:id="@+id/vk"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/telegram"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/vk"
        android:onClick="opengruppa"
        android:scaleType="fitCenter"
        android:src="@drawable/vk" />

    <dmitriy.deomin.aimpradioplalist.custom.Btn
        android:id="@+id/donat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/vk"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/donat"
        android:onClick="donat"
        android:scaleType="fitCenter"
        android:src="@drawable/donat" />


</RelativeLayout>
