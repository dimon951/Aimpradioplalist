<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fon_setting"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_edit_fon_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="Edit_color_fon"
        android:text="Цвет фона" />

    <Button
        android:id="@+id/button_edit_color_posty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="Edit_color_fon"
        android:text="Цвет станций" />

    <Button
        android:id="@+id/button_edit_color_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="Edit_color_fon"
        android:text="Цвет текста" />


</LinearLayout>
