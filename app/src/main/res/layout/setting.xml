<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/fon_setting">

    <Button
        android:id="@+id/button_edit_fonts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="edit_fonts"
        android:text="Изменить шрифт" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <dmitriy.deomin.aimpradioplalist.Text
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Цвет фона"
            android:id="@+id/textView_edit_fon_color"
            android:gravity="center|left" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_edit_fon_color"
            android:onClick="Edit_color_fon"
            android:text="Изменить" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

        <dmitriy.deomin.aimpradioplalist.Text
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Цвет станций"
            android:id="@+id/textView_edit_color_posty"
            android:gravity="center|left" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_edit_color_posty"
            android:onClick="Edit_color_fon"
            android:text="Изменить" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

        <dmitriy.deomin.aimpradioplalist.Text
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Цвет текста"
            android:id="@+id/textView_edit_color_text"
            android:gravity="center|left" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_edit_color_text"
            android:onClick="Edit_color_fon"
            android:text="Изменить" />

    </LinearLayout>

    <Button
        android:id="@+id/save_this_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_save" />


    <TextView
        android:id="@+id/logo_pagera_inumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="number them"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/separator"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_themeleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_media_previous" />

        <Button
            android:id="@+id/button_themedel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_menu_delete" />

        <Button
            android:id="@+id/buttonthemenext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/ic_media_next" />

    </LinearLayout>

</LinearLayout>
