<?xml version="1.0" encoding="utf-8"?>
<dmitriy.deomin.aimpradioplalist.custom.Fon_item xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:background="@null"
    android:elevation="0dp"
    app:cardBackgroundColor="@color/cardview_shadow_start_color"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <dmitriy.deomin.aimpradioplalist.custom.Text
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/add_koment"
            android:textSize="20sp" />

        <dmitriy.deomin.aimpradioplalist.custom.Find
            android:id="@+id/ed_add_kom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:autofillHints=""
            android:background="@null"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/komentarii"
            android:inputType=""
            android:maxHeight="300dp"
            android:minHeight="40dp" />

        <dmitriy.deomin.aimpradioplalist.custom.Btn
            android:id="@+id/btn_ad_kom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:text="@android:string/ok" />
    </LinearLayout>

</dmitriy.deomin.aimpradioplalist.custom.Fon_item>