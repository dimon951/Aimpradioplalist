<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/animacia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dmitriy.deomin.aimpradioplalist.Animacia"
    android:orientation="vertical"
    android:gravity="center">




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <dmitriy.deomin.aimpradioplalist.Text
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Анимация логотипа при клике"
            android:gravity="center|left" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_edit_anim_clik"
            android:text="Изменить"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <dmitriy.deomin.aimpradioplalist.Text
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Анимация логотипа при листании"
            android:gravity="center|left" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button_edit_anim_perechod"
            android:text="Изменить"
            android:background="@android:color/transparent" />

    </LinearLayout>



</LinearLayout>
