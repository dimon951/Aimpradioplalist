<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Введите название нужной станции" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <dmitriy.deomin.aimpradioplalist.But_Kod
                android:id="@+id/kod_diskografii"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Дискография"
                android:textSize="10sp" />

            <dmitriy.deomin.aimpradioplalist.But_Kod
                android:id="@+id/kod_32bit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Музыка"
                android:textSize="10sp" />

            <dmitriy.deomin.aimpradioplalist.But_Kod
                android:id="@+id/kod_64bit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Юмор"
                android:textSize="10sp" />

            <dmitriy.deomin.aimpradioplalist.But_Kod
                android:id="@+id/kod_96bit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Разговорное"
                android:textSize="10sp" />

            <dmitriy.deomin.aimpradioplalist.But_Kod
                android:id="@+id/kod_128bit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Аудиокниги"
                android:textSize="10sp" />

            <dmitriy.deomin.aimpradioplalist.But_Kod
                android:id="@+id/kod_256bit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Саундтреки"
                android:textSize="10sp" />


        </LinearLayout>

    </LinearLayout>

    <ListView
    android:id="@+id/listviw_vse_radio"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:divider="@null" />

</LinearLayout>