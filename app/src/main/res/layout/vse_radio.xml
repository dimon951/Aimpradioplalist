<?xml version="1.0" encoding="utf-8"?><!--отключение бакграунда где он не нужен вроде как увеличит производительность(android:background="@null")-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="Введите название нужной станции" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:orientation="horizontal">

            <dmitriy.deomin.aimpradioplalist.But_Kod
                android:id="@+id/kod_diskografii"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="Дискография"
                android:textSize="10sp" />

            <dmitriy.deomin.aimpradioplalist.But_Kod
                android:id="@+id/kod_32bit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="Музыка"
                android:textSize="10sp" />

            <dmitriy.deomin.aimpradioplalist.But_Kod
                android:id="@+id/kod_64bit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="Детское"
                android:textSize="10sp" />

            <dmitriy.deomin.aimpradioplalist.But_Kod
                android:id="@+id/kod_96bit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="Разговорное"
                android:textSize="10sp" />

            <dmitriy.deomin.aimpradioplalist.But_Kod
                android:id="@+id/kod_128bit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="Аудиокниги"
                android:textSize="10sp" />

            <dmitriy.deomin.aimpradioplalist.But_Kod
                android:id="@+id/kod_256bit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="Саундтреки"
                android:textSize="10sp" />


        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recicl_vse_radio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

</LinearLayout>