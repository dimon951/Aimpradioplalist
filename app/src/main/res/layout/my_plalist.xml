<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/listvew_my_plalist"
        android:divider="@null"
        android:layout_weight="1" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/button_add_url"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/button_delete"
            android:layout_alignBottom="@+id/button_delete"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_toEndOf="@+id/button_delete"
            android:layout_toRightOf="@+id/button_delete"
            android:background="@android:drawable/ic_menu_add" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/open_aimp"
            android:layout_weight="0"
            android:background="@android:drawable/ic_media_play"
            android:gravity="center_vertical|center_horizontal|center"
            android:foregroundGravity="center"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button_otpravit"
            android:layout_toStartOf="@+id/button_otpravit"
            android:layout_marginRight="46dp"
            android:layout_marginEnd="46dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button_delete"
            android:layout_weight="0"
            android:background="@android:drawable/ic_menu_delete"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:visibility="visible" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/button_otpravit"
            android:layout_weight="0"
            android:background="@android:drawable/ic_menu_share"
            android:gravity="right|center_vertical"
            android:foregroundGravity="right"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>