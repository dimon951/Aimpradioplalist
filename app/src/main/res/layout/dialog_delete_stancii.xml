<?xml version="1.0" encoding="utf-8"?>
<dmitriy.deomin.aimpradioplalist.Fon_item
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="false"
        android:elevation="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
    android:background="@null">


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/dialog_fon"
            android:showDividers="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <dmitriy.deomin.aimpradioplalist.Text
                        android:id="@+id/text_voprosa_del_stncii"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:gravity="center"
                        android:isScrollContainer="false"
                        android:minHeight="100dp"
                        android:scrollbars="vertical"
                        android:text="текст"
                        android:textSize="15sp"
                        android:textStyle="normal|bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:showDividers="none">

                    <dmitriy.deomin.aimpradioplalist.Btn
                        android:id="@+id/button_dialog_delete"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_marginRight="30dp"
                        android:background="@null"
                        android:text="Да"
                        android:textColor="@color/green"
                        android:textSize="14sp" />

                    <dmitriy.deomin.aimpradioplalist.Btn
                        android:id="@+id/button_dialog_no"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:text="Нет"
                        android:textColor="@color/green"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
</dmitriy.deomin.aimpradioplalist.Fon_item>
