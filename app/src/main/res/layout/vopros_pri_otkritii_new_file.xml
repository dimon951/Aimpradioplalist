<?xml version="1.0" encoding="utf-8"?>
<dmitriy.deomin.aimpradioplalist.custom.Fon_item
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    android:elevation="0dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/cardview_shadow_start_color"
    android:background="@null">

    <LinearLayout
        android:id="@+id/menu_progi_alert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="center"
        android:orientation="vertical">

        <dmitriy.deomin.aimpradioplalist.custom.Text
            android:id="@+id/textView_vopros_pro_old_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:gravity="center"
            android:text="Что сделать с текущим плейлистом?"
            android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@drawable/separator"
        android:orientation="horizontal"
        android:showDividers="beginning|middle|end"
        android:background="@null">

        <dmitriy.deomin.aimpradioplalist.custom.Btn
            android:id="@+id/button_dell_old_plalist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="Затереть" />

        <dmitriy.deomin.aimpradioplalist.custom.Btn
            android:id="@+id/button_add_old_plalist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="Дописать" />

    </LinearLayout>

    </LinearLayout>
</dmitriy.deomin.aimpradioplalist.custom.Fon_item>